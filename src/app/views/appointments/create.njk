{% extends "_layouts/default.njk"%}

{% block body %}
  <div class="content">
    <strong>Agendando hor√°rio</strong>
    <div class="provider">
      <div>
        <img src="/files/{{ provider.avatar }}"/>
        <strong>{{provider.name}}</strong>
      </div>
    </div>

    <form action="/app/appointment/new/{{ provider.id }}" method="post">
      <input type="text" class="flatpickr" placeholder="Escolha a data">

      <div id="hours">
        <label>
          <input type="radio"/>
          12:00
      </label>
        <label>
          <input type="radio"/>
          13:00
      </label>
        <label>
          <input type="radio"/>
          14:00
      </label>
      </div>
      <button type="submit">Agendar</button>
    </form>

    <script type="text/javascript">
      flatpickr('.flatpickr', {
        minDate: new Date(),
        dateFormat: 'd/m/Y'
      })
    </script>
  </div>
{% endblock %}
